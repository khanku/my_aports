# Maintainer: Fran√ßois Chavant <alpine@mail.chavant.info>
pkgname=py3-tox
pkgver=2.7.0
pkgrel=0
pkgdesc="virtualenv-based automation of test activities"
url="https://tox.readthedocs.io/"
arch="noarch"
license="MIT"
depends="python3 py3-pluggy"
makedepends="python3-dev"
install=""
subpackages=""
source="${pkgname#py3-}-$pkgver.tar.gz::https://github.com/tox-dev/tox/archive/$pkgver.tar.gz"

builddir="$srcdir/${pkgname#py3-}-$pkgver"

build() {
	cd "$builddir"
	python3 setup.py build
}

check() {
	cd "$builddir"
	python3 setup.py test
}

package() {
	cd "$builddir"
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

